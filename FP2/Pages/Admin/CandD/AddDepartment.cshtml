@page
@model FP2.Pages.Admin.CandD.AddDepartmentModel

@{
    ViewData["Title"] = "Add Department";
}

<h1>Add Department</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DepartmentId" class="control-label"></label>
                <input asp-for="Department.DepartmentId" class="form-control" />
                <span asp-validation-for="Department.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Departments">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
