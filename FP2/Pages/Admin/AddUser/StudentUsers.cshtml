@page "{id?}"
@model FP2.Pages.Admin.AddUser.StudentUsersModel

@{
    ViewData["Title"] = "Student Users";
}

<h1>Student Users</h1>

<div style="overflow-y:scroll;height:400px">
    <table class="table table-bordered">
        <thead class="thead-dark text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.studentUsers[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.studentUsers[0].Id)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.studentUsers[0].UserName)
                    </th>*@

                <th>Student Data - Add/View</th>
            </tr>
        </thead>
        <tbody class="text-center">

            @foreach (var item in Model.studentUsers.Select((value, index) => new { Value = value, Index = index }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Id)
                    </td>

                    @if (Model.userids.Contains(item.Value.Id))
                    {
                        <td>
                            <a asp-page="StudentDataDetails" asp-route-id="@item.Value.Id">View Student Info</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-page="StudentData" asp-route-id="@item.Value.Id">Add Student Info</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>       
 

<div>
    <a asp-page="Users">Back to List</a>
</div>
