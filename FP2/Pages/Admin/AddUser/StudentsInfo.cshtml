@model FP2.Pages.Admin.AddUser.StudentsInfoModel

@{
    ViewData["Title"] = "Students Info";
}

<h1>Students Info</h1>


<div style="overflow-y:scroll;height:300px">
    <table class="table table-bordered">
        <thead class="thead-dark text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].DepartmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].UserId)
                </th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model.Student)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    @*<td>
                            <a asp-page="./Edit" asp-route-id="@item.StudentId">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.StudentId">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.StudentId">Delete</a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>


<div>
    <a asp-page="Users">Back to List</a>
</div>

