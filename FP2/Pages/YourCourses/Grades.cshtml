@page
@model FP2.Pages.YourCourses.GradesModel
@{
    ViewData["Title"] = "Grades";
}

<h1>Grades</h1><hr />

<h5>CGPA: @Model.Cgpa </h5><hr />

<table class="table table-bordered">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Course.CourseId)
            </th>
            <th style="width:600px">
                @Html.DisplayNameFor(model => model.Enrollment[0].Course.CourseName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Grade)
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model.Enrollment)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseId)
            </td>
            <td style="width:600px">
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            @if (item.Grade == null)
            {
                <td>
                    Grade Not Assigned Yet
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            }

        </tr>
        }
    </tbody>
</table>

